# ==================== CONEXIÓN A BASE DE DATOS ====================
spring.datasource.url=jdbc:mysql://localhost:3306/miHistoriaClinicaDB?useUnicode=true&characterEncoding=UTF-8&serverTimezone=America/Argentina/Buenos_Aires
spring.datasource.username=root
spring.datasource.password=root

# ==================== SERVIDOR ====================
server.port=8080

# ==================== JPA/HIBERNATE ====================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.open-in-view=false

# ==================== SENDGRID (EMAILS) ====================
# Obtener API key en https://sendgrid.com/
sendgrid.api.key=TU_API_KEY_AQUI
sendgrid.from.email=tu-email@ejemplo.com
sendgrid.from.name=Mi Historia Clinica

# ==================== RECORDATORIOS ====================
app.reminders.enabled=true
app.reminders.turno.hours-before=24
app.reminders.analysis.hours-before=24

# ==================== INICIALIZACIÓN SQL ====================
# Para cargar datos iniciales, ejecutar manualmente: init-database.sql
spring.sql.init.mode=never

